<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_standard_subject_config_tree" model="ir.ui.view">
            <field name="name">standard.subject.config.tree</field>
            <field name="model">standard.subject.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="standard_id"/>
                    <field name="subject_id"/>
                    <field name="coefficient"/>
                    <field name="maximum_marks"/>
                    <field name="surerogatoire"/>
                    
                   <field name="class_ids" widget="many2many_tags" options="{'no_create': True}" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_standard_subject_config_form" model="ir.ui.view">
            <field name="name">standard.subject.config.form</field>
            <field name="model">standard.subject.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="standard_id"/>
                                <field name="subject_id"/>
                                <field name="class_ids" widget="many2many_tags" options="{'no_create': True}" />
                            </group>
                            <group>
                                <field name="coefficient"/>
                                <field name="maximum_marks"/>
                                <field name="minimum_marks"/>
                                 <field name="surerogatoire"/>
                    
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="standard_subject_parent_search" model="ir.ui.view">
            <field name="name">standard.subject.config.search</field>
            <field name="model">standard.subject.config</field>
            <field name="arch" type="xml">
                <search string="Search Standard Subject Configuration">
                     <field name="year_id"/>
                   <separator/>
                  

                    <filter name="current_year" string="Current Year" domain="[('year_id.current','=',True)]" help="academic year"/>
               </search>
            </field>
        </record>


        <!-- Action -->
        <record id="action_standard_subject_config" model="ir.actions.act_window">
            <field name="name">Configuration Matières par Niveau</field>
            <field name="res_model">standard.subject.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_current_year':1}</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_standard_subject_config" 
                  name="Configuration Matières" 
                  parent="school.menu_school_standard_form"
                  action="action_standard_subject_config"
                  sequence="10"/>
    </data>
</odoo>