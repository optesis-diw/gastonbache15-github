                            <field name="school_id" placeholder="School" widget="selection" help="School of Student" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                        </group>
                         <group string="Informations sur l'élève">
                            <field name="gender" placeholder="Gender" attrs="{'readonly':[('state','=','alumni')]}" required="1"/>
                            <field name="date_of_birth" placeholder="Birthdate" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="age" />
                            <field name="lieu_naiss"/>
                             <field name="street" class="o_address_street" placeholder="Rue..." attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                             <field name="street2" class="o_address_street" placeholder="Rue2..." attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <!--<field name="nationalite"/>-->
                        </group>
                        <group string="Informations sur la classe">
